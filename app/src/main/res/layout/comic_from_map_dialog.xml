<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_back_blue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/comic_from_map_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="MOCKUP TITLE"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/comic_from_map_description_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:text="MOCKUP DESCRIPTION"
        android:textAlignment="center"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/short_comic_rating_rb"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:isIndicator="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comic_from_map_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_gradient_back"
            android:padding="8dp"
            android:text="MOCKUP AUTHOR"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/comic_from_map_title_page_iv"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:src="@drawable/empty_page" />

    <Button
        android:id="@+id/comic_from_map_action_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:textAllCaps="true"
        android:textStyle="bold" />

</LinearLayout>